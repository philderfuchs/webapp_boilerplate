{
	"name": "webapp_boilerplate",
	"scripts": {
		"start": "concurrently --kill-others \"npm run pack\" \"npm run sass\"",
		"pack": "webpack-dev-server",
		"sass": "node-sass scss/app.scss build/css/app.css --watch",
		"production": "node-sass scss/app.scss build/css/app.css --output-style compressed \n webpack -p --config=webpack.production.config.js"
	},
	"devDependencies": {
		"babel-core": "^6.25.0",
		"babel-loader": "^7.1.1",
		"babel-preset-es2015": "^6.24.1",
		"concurrently": "^3.5.0",
		"node-sass": "^4.5.3",
		"webpack": "^3.1.0",
		"webpack-dev-server": "^2.5.0"
	}
}
